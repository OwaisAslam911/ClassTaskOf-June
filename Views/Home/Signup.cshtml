@model ClassTaskOf_June.Models.UserReg

@{
    ViewData["Title"] = "Signup";
}

<h1>Signup</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserRegView.UserName" class="control-label"></label>
                <input asp-for="UserRegView.UserName" class="form-control" />
                <span asp-validation-for="UserRegView.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRegView.UserEmail" class="control-label"></label>
                <input asp-for="UserRegView.UserEmail" class="form-control" />
                <span asp-validation-for="UserRegView.UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRegView.UserPassword" class="control-label"></label>
                <input asp-for="UserRegView.UserPassword" class="form-control" />
                <span asp-validation-for="UserRegView.UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRegView.RoleId" class="control-label"></label>
                <select asp-for="UserRegView.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

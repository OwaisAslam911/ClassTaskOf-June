@model IEnumerable<ClassTaskOf_June.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card col-lg-3 col-md-6 col-sm-12" style="width: 18rem;">
            <img src="@Html.DisplayFor(modelItem => item.ProductImage)" class="card-img-top" alt="Product Image">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                <a href="#" class="btn btn-primary">Add To Cart</a>
            </div>
        </div>

    }
</div>
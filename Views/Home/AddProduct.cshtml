 @model ClassTaskOf_June.Models.ProductViewModel

@{
    ViewData["Title"] = "AddProduct";
}

<h1>AddProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InsertProduct.ProductName" class="control-label"></label>
                <input asp-for="InsertProduct.ProductName" class="form-control" />
                <span asp-validation-for="InsertProduct.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertProduct.ProductPrice" class="control-label"></label>
                <input asp-for="InsertProduct.ProductPrice" class="form-control" />
                <span asp-validation-for="InsertProduct.ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertProduct.Description" class="control-label"></label>
                <input asp-for="InsertProduct.Description" class="form-control" />
                <span asp-validation-for="InsertProduct.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertProduct.ProductImage" class="control-label"></label>
                <input name="img" type="file" class="form-control" />
                <span asp-validation-for="InsertProduct.ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsertProduct.CategoryId" class="control-label"></label>
                <select asp-for="InsertProduct.CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option></option>
                    @foreach( var item in Model.Categories){
                        <option value="@item.CategoryId">@item.CategoryName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Product" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
